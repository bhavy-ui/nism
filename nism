h1{text-align:center;color:#00bcd4}
button{background:#00bcd4;color:#fff;border:none;padding:10px 20px;border-radius:5px;cursor:pointer;margin-top:10px}
.option{margin:8px 0;display:block;padding:8px;border:1px solid #333;border-radius:5px;cursor:pointer}
.option:hover{background:#223}
